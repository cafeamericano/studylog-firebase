<!-- Generate Cards for Each Record -->
<div>

<form action="/profile/update/process" method="post">

    {{# each entries}}

    <div class="text-center">
        <div style="
            margin: 0px auto;
            border-radius: 100%;
            border: 2px solid gray;
            width: 100px;
            height: 100px;
            background-image: url({{this.profilephoto}});
            background-size: cover
        ">
        </div>
        <span style="font-size: 30px">{{this.firstname}} {{this.lastname}}</span>
        <br>
        <span style="font-size: 16px">{{this.city}}, {{this.country}}</span>
    </div>

    <br>

    <div class="row">

        <div class="col">

            <div class="form-group" style="display: none">
                <label>Email</label>
                <input readonly type="email" value="{{this.id}}" class="form-control" id="id" name="id">
            </div>

            <div class="form-group">
                <label>Email</label>
                <input readonly type="email" value="{{this.email}}" class="form-control" id="email" name="email">
            </div>

            <div class="form-group">
                <label>First Name</label>
                <input type="text" value="{{this.firstname}}" class="form-control" id="firstname" name="firstname">
            </div>

            <div class="form-group">
                <label>Last Name</label>
                <input type="text" value="{{this.lastname}}" class="form-control" id="lastname" name="lastname">
            </div>

            <div class="form-group">
                <label>Profile Photo Link</label>
                <input type="text" value="{{this.profilephoto}}" class="form-control" id="profilephoto" name="profilephoto">
            </div>

        </div>

        <div class="col">
            <div class="form-group">
                <label>City</label>
                <input type="text" value="{{this.city}}" class="form-control" id="city" name="city">
            </div>

            <div class="form-group">
                <label>State</label>
                <input type="text" value="{{this.state}}" class="form-control" id="state" name="state">
            </div>

            <div class="form-group">
                <label>Zip</label>
                <input type="text" value="{{this.zip}}" class="form-control" id="zip" name="zip">
            </div>

            <div class="form-group">
                <label>Country</label>
                <input type="text" value="{{this.country}}" class="form-control" id="country" name="country">
            </div>

        </div>

    </div>

     {{/each}}

    <br>

    <div class="row">
        <div class="col text-left ">
            <a href="/account/delete/prompt"><div class="btn btn-danger mr-2">Delete My Account</div></a>
        </div>
        <div class="col text-right ">
            <a href="/usercontent/entries/show"><div class="btn btn-primary ml-2">Cancel</div></a>
            <button type="submit" class="btn btn-primary ml-2">Submit Changes</button>
        </div>
    </div>

</form>

</div>

