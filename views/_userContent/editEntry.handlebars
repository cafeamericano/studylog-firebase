<!-- Generate Cards for Each Record -->

<div class="row">
  <div class="col text-left">
    <h2>Edit an entry.</h2>
    <br>
  </div>
</div>

{{# each entries}}

    <form action="/usercontent/entries/edit/process/" method="POST">

    <div class="form-group" style="display: none">
        <label>ID</label>
        <input type="text" class="form-control" name="ID" value="{{this.ID}}" readonly="readonly" aria-describedby="emailHelp">
    </div>

    <div class="form-group">
        <label>Date</label>
        <input type="text" class="form-control" name="date" value="{{this.date}}" aria-describedby="emailHelp">
    </div>

    <div class="form-group">
        <label>Hours</label>
        <input type="float" class="form-control" name="hours" value="{{this.hours}}" aria-describedby="emailHelp">
    </div>

    <div class="form-group">
        <label>Comments</label>
        <input class="form-control" name="comments" value="{{this.comments}}" aria-describedby="emailHelp"></input>
    </div>

    <div class="form-group">
        <label>Programming Language</label>
        <input class="form-control" name="proglang" value="{{this.proglang}}" aria-describedby="emailHelp"></input>
    </div>
    
    <div style="text-align: right">
        <a href="/usercontent/entries/show" class="btn btn-primary">Cancel</button></a>
        <button type="submit" class="btn btn-primary">Update</button>
    </div>

    </form>

{{/each}}
