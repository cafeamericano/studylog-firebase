<!-- Generate Cards for Each Record -->

<div class="row">
  <div class="col text-left">
    <h2>Add a new entry.</h2>
    <br>
  </div>
</div>

<form action="/usercontent/entries/add/process" method="post">

    <div class="form-group">
        <label for="date">Date</label>
        <input type="date" class="form-control" id="date" name="date" placeholder="Date"></input>
    </div>

    <div class="form-group">
        <label for="hours">Hours</label>
        <input type="number" step="0.25" min="0" class="form-control" id="hours" name="hours" placeholder="Hours"></input>
    </div>

    <div class="form-group">
        <label for="comments">Comments</label>
        <textarea class="form-control" rows="5" id="comments" name="comments" placeholder="Comments"></textarea>
    </div>

    <div class="form-group">
        <label for="hours">Programming Language</label>
        <input type="text" class="form-control" id="proglang" name="proglang" placeholder="Programming language"></input>
    </div>
    
    <div class="row">
        <div class="col text-right ">
            <a href="/usercontent/entries/show"><div class="btn btn-primary ml-2">Cancel</div></a>
            <button type="submit" class="btn btn-primary ml-2">Submit</button>
        </div>
    </div>

</form>

